{
  "manifest_version": 3,
  "name": "VdAiSentry",
  "version": "1.0",
  "description": "Find AI Made Videos",
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon152.png",
      "48": "images/icon152.png", 
      "128": "images/icon152.png"
    }
  }
}
